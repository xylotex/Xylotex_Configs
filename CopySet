#!/bin/bash

sudo mv uEnv.txt /boot/uEnv.txt
sudo mv interfaces /etc/network/interfaces

sudo mkdir -p /mnt/WinPC
sudo apt-get update
sudo apt-get install -y smbclient
sudo apt-get install cifs-utils
sudo apt-get install leafpad
sudo apt-get install -y pcmanfm

md -p machinekit/configs/ARM.BeagleBone.Xylotex

git clone https://github.com/xylotex/Xylotex_Configs
echo Change to Xylotex Directory
cd /Xylotex_Configs
cp -R * ~/machinekit/configs/ARM.BeagleBone.Xylotex

cd /opt/scripts/tools/
git pull
sudo ./grow_partition.sh
echo REBOOT by typing: sudo reboot